CREATE DATABASE CLINICA_MEDICA_POO;
USE CLINICA_MEDICA_POO;

 CREATE TABLE Funcionario (
    id INT AUTO_INCREMENT PRIMARY KEY,
    usuario VARCHAR(100) NOT NULL,
    senha VARCHAR(100) NOT NULL,
    nome VARCHAR(255) NOT NULL,
    sexo CHAR(1) NOT NULL,
    cpf VARCHAR(20) NOT NULL,
    rua VARCHAR(255),
    numero VARCHAR(20),
    complemento VARCHAR(255),
    bairro VARCHAR(100),
    cidade VARCHAR(100),
    estado VARCHAR(100),
    contato VARCHAR(20),
    email VARCHAR(100),
    dataNascimento DATE,
    tipoFuncionario_id INT,
    FOREIGN KEY (tipoFuncionario_id) REFERENCES EnumTipoFuncionario(id)
    );

CREATE TABLE PACIENTE (
    id INT AUTO_INCREMENT PRIMARY KEY,
    NOME VARCHAR(255) NOT NULL,
    USUARIO VARCHAR(100) NOT NULL,
    SENHA VARCHAR(100) NOT NULL,
    SEXO CHAR(1) NOT NULL,
    CPF VARCHAR(20) NOT NULL,
    RUA VARCHAR(255),
    NUMERO VARCHAR(20),
    COMPLEMENTO VARCHAR(255),
    BAIRRO VARCHAR(100),
    CIDADE VARCHAR(100),
    ESTADO VARCHAR(100),
    CONTATO VARCHAR(20),
    EMAIL VARCHAR(100),
    DATANASCIMENTO DATE
    );

     CREATE TABLE CONSULTA (
    ID INT AUTO_INCREMENT PRIMARY KEY,
    DATAHORARIO DATETIME NOT NULL,
    SINTOMA TEXT,
    DIAGNOSTICO TEXT,
    ESTAATIVA BOOLEAN NOT NULL
    );

     CREATE TABLE ESPECIALIDADE (
    ID INT AUTO_INCREMENT PRIMARY KEY,
    NOME VARCHAR(255) NOT NULL,
    DESCRICAO TEXT
    );

 CREATE TABLE CONVENIO (
    ID INT AUTO_INCREMENT PRIMARY KEY,
    NOME VARCHAR(255) NOT NULL,
    DESCRICAO TEXT
    );

    CREATE TABLE PRONTUARIO(
    ID INT AUTO_INCREMENT PRIMARY KEY,
    RECEITUARIO TEXT,
    OBSERVACOES TEXT
    );

